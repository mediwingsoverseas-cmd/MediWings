<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MediWings" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/gold</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Premium Button Styles -->
    <style name="PremiumButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_gold</item>
        <item name="android:textColor">@color/text_on_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OutlineButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_outline</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Premium Card Style -->
    <style name="PremiumCard">
        <item name="android:background">@drawable/bg_card_premium</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Premium Input Field Style -->
    <style name="PremiumEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_input_field</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>
</resources>