<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Control Center"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <Button
                android:id="@+id/btnAdminStudents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Students"
                android:layout_marginEnd="8dp"/>
            <Button
                android:id="@+id/btnAdminMessages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Messages"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <Button
                android:id="@+id/btnAddUniversity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add University"
                android:backgroundTint="#0066FF"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp"/>
            <Button
                android:id="@+id/btnEditContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Contact"
                android:backgroundTint="#0066FF"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banner Management"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">
            <Button
                android:id="@+id/btnUploadBanner1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B1"
                android:layout_marginEnd="4dp"/>
            <Button
                android:id="@+id/btnUploadBanner2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B2"
                android:layout_marginEnd="4dp"/>
            <Button
                android:id="@+id/btnUploadBanner3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B3"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Page Content Editor (HTML)"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <Button
                android:id="@+id/btnInsertImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insert Image URL"
                android:textSize="12sp"
                style="?android:attr/buttonBarButtonStyle"/>
            <Button
                android:id="@+id/btnInsertBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;b&gt;"
                android:textSize="12sp"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etHomeContent"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:hint="Type HTML content here..."
            android:gravity="top"
            android:background="@android:drawable/editbox_background"
            android:padding="12dp"
            android:textColor="#333333"
            android:inputType="textMultiLine"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSaveCMS"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save Home Page"
            android:backgroundTint="#0066FF"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>