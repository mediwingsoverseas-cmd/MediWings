<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_premium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Premium Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_premium"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MediWings"
                android:textColor="@color/gold_premium"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Control Center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:alpha="0.8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Dashboard Stats Cards -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard Overview"
                android:textColor="@color/primary_premium"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/gold">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_student"
                            app:tint="@color/white"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tvTotalStudents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Students"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:alpha="0.9"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/primary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_messages"
                            app:tint="@color/gold"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:id="@+id/tvActiveChats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/gold"
                            android:textSize="28sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active Chats"
                            android:textColor="@color/gold_light"
                            android:textSize="12sp"
                            android:alpha="0.9"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Main Actions Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Main Actions"
                        android:textColor="@color/primary_premium"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <Button
                            android:id="@+id/btnAdminStudents"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="STUDENTS"
                            android:textStyle="bold"
                            android:backgroundTint="@color/gold_premium"
                            android:textColor="@color/primary_premium"
                            android:layout_marginEnd="8dp"
                            android:drawableTop="@android:drawable/ic_menu_myplaces"
                            android:drawableTint="@color/primary_premium"
                            android:drawablePadding="4dp"/>
                        
                        <Button
                            android:id="@+id/btnAdminMessages"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="MESSAGES"
                            android:textStyle="bold"
                            android:backgroundTint="@color/gold_premium"
                            android:textColor="@color/primary_premium"
                            android:drawableTop="@android:drawable/ic_dialog_email"
                            android:drawableTint="@color/primary_premium"
                            android:drawablePadding="4dp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Content Management Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Content Management"
                        android:textColor="@color/primary_premium"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <Button
                            android:id="@+id/btnAddUniversity"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="ADD UNIVERSITY"
                            android:textStyle="bold"
                            android:backgroundTint="@color/secondary_premium"
                            android:textColor="@color/white"
                            android:layout_marginEnd="8dp"
                            android:drawableTop="@android:drawable/ic_input_add"
                            android:drawableTint="@color/white"
                            android:drawablePadding="4dp"/>
                        
                        <Button
                            android:id="@+id/btnEditContact"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="EDIT CONTACT"
                            android:textStyle="bold"
                            android:backgroundTint="@color/secondary_premium"
                            android:textColor="@color/white"
                            android:drawableTop="@android:drawable/ic_menu_edit"
                            android:drawableTint="@color/white"
                            android:drawablePadding="4dp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Banner Management Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Banner Management"
                        android:textColor="@color/primary_premium"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        
                        <Button
                            android:id="@+id/btnUploadBanner1"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:text="BANNER 1"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:backgroundTint="@color/gold_premium"
                            android:textColor="@color/primary_premium"
                            android:layout_marginEnd="4dp"/>
                        
                        <Button
                            android:id="@+id/btnUploadBanner2"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:text="BANNER 2"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:backgroundTint="@color/gold_premium"
                            android:textColor="@color/primary_premium"
                            android:layout_marginEnd="4dp"/>
                        
                        <Button
                            android:id="@+id/btnUploadBanner3"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:text="BANNER 3"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:backgroundTint="@color/gold_premium"
                            android:textColor="@color/primary_premium"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Home Page Editor Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home Page Content Editor"
                        android:textColor="@color/primary_premium"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(WYSIWYG Editor)"
                        android:textColor="@color/gray"
                        android:textSize="12sp"
                        android:layout_marginBottom="12dp"/>

                    <!-- Rich Text Toolbar -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:layout_marginBottom="8dp">
                        
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            
                            <Button
                                android:id="@+id/btnBold"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:text="B"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:backgroundTint="@color/secondary_premium"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp"
                                style="?android:attr/buttonBarButtonStyle"/>
                            
                            <Button
                                android:id="@+id/btnItalic"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:text="I"
                                android:textStyle="italic"
                                android:textSize="14sp"
                                android:backgroundTint="@color/secondary_premium"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp"
                                style="?android:attr/buttonBarButtonStyle"/>
                            
                            <Button
                                android:id="@+id/btnUnderline"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:text="U"
                                android:textSize="14sp"
                                android:backgroundTint="@color/secondary_premium"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp"
                                style="?android:attr/buttonBarButtonStyle"/>
                            
                            <Button
                                android:id="@+id/btnH1"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:text="H1"
                                android:textSize="12sp"
                                android:backgroundTint="@color/secondary_premium"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp"
                                style="?android:attr/buttonBarButtonStyle"/>
                            
                            <Button
                                android:id="@+id/btnH2"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:text="H2"
                                android:textSize="12sp"
                                android:backgroundTint="@color/secondary_premium"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp"
                                style="?android:attr/buttonBarButtonStyle"/>
                            
                            <Button
                                android:id="@+id/btnBullets"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:text="â€¢"
                                android:textSize="18sp"
                                android:backgroundTint="@color/secondary_premium"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp"
                                style="?android:attr/buttonBarButtonStyle"/>
                            
                            <Button
                                android:id="@+id/btnNumbers"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:text="1."
                                android:textSize="14sp"
                                android:backgroundTint="@color/secondary_premium"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp"
                                style="?android:attr/buttonBarButtonStyle"/>
                            
                            <Button
                                android:id="@+id/btnInsertImage"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:text="IMG"
                                android:textSize="12sp"
                                android:backgroundTint="@color/secondary_premium"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp"
                                style="?android:attr/buttonBarButtonStyle"/>
                            
                            <Button
                                android:id="@+id/btnInsertLink"
                                android:layout_width="wrap_content"
                                android:layout_height="45dp"
                                android:text="LINK"
                                android:textSize="12sp"
                                android:backgroundTint="@color/secondary_premium"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp"
                                style="?android:attr/buttonBarButtonStyle"/>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Rich Text Editor -->
                    <jp.wasabeef.richeditor.RichEditor
                        android:id="@+id/richEditor"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@android:drawable/editbox_background"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/btnSaveCMS"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="SAVE HOME PAGE"
                        android:backgroundTint="@color/gold_premium"
                        android:textColor="@color/primary_premium"
                        android:textStyle="bold"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Logout Button -->
            <Button
                android:id="@+id/btnAdminLogout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="LOGOUT"
                android:textStyle="bold"
                android:backgroundTint="@color/red"
                android:textColor="@color/white"
                android:drawableStart="@android:drawable/ic_lock_power_off"
                android:drawableTint="@color/white"
                android:drawablePadding="8dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>