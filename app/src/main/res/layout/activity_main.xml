<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/dark_background">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mediwings_logo"
        android:layout_marginBottom="24dp"
        android:alpha="0.4"
        android:contentDescription="@string/app_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="cursive"
        android:letterSpacing="0.1"
        android:text="@string/app_name_styled"
        android:textColor="@color/gold_accent"
        android:textSize="48sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login as Worker"
        android:textColor="@color/gold_accent"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:thumbTint="@color/gold_accent"
        android:trackTint="@color/text_secondary"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="LOGIN"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/dark_background"
        android:backgroundTint="@color/gold_accent"/>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_user_create_account"
        android:textColor="@color/gold_accent"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"/>

</LinearLayout>