<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/primary_premium">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mediwings_logo"
        android:layout_marginBottom="24dp"
        android:alpha="0.8"
        android:contentDescription="@string/app_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="cursive"
        android:letterSpacing="0.1"
        android:text="@string/app_name_styled"
        android:textColor="@color/gold_premium"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Your Gateway to Medical Education Abroad"
        android:textColor="@color/gold_light"
        android:textSize="16sp"
        android:gravity="center"
        android:alpha="0.9"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:layout_marginBottom="16dp"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="12dp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="16dp"
        android:background="@drawable/edit_text_background"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:layout_marginBottom="16dp"
        android:drawableStart="@android:drawable/ic_lock_lock"
        android:drawablePadding="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login As"
        android:textColor="@color/gold_premium"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/btnRoleStudent"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="STUDENT"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="@color/gold_premium"
            android:textColor="@color/primary_premium"
            android:layout_marginEnd="8dp"
            app:icon="@drawable/ic_student"
            app:iconTint="@color/primary_premium"
            style="@style/Widget.Material3.Button"/>

        <Button
            android:id="@+id/btnRoleWorker"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="WORKER"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/gold_premium"
            app:icon="@drawable/ic_worker"
            app:iconTint="@color/gold_premium"
            style="@style/Widget.Material3.Button.OutlinedButton"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="LOGIN"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_premium"
        android:backgroundTint="@color/gold_premium"/>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_user_create_account"
        android:textColor="@color/gold_premium"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"/>

</LinearLayout>