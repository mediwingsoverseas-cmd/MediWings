<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New University"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/etUniName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="University Name"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etUniDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description / Details"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:minLines="5"
            android:gravity="top"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/ivUniPhotoPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#EEEEEE"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnPickUniPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Photo"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSaveUniversity"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save University"
            android:backgroundTint="#0066FF"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>