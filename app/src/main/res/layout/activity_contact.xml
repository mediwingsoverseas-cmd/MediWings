<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_premium"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarContact"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_premium"
        app:title="Contact Support"
        app:titleTextColor="@color/gold_premium" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llContactContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Official Email"
                        android:textColor="@color/gold_premium"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/tvOfficialEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mediwingsoverseas@gmail.com"
                        android:textColor="@color/primary_premium"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Javeed's Email"
                        android:textColor="@color/gold_premium"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/tvJaveedEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="javeedzoj@gmail.com"
                        android:textColor="@color/primary_premium"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call Us"
                        android:textColor="@color/gold_premium"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>

                    <TextView
                        android:id="@+id/tvPhone1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 8792207943"
                        android:textColor="@color/primary_premium"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp"
                        app:drawableStartCompat="@drawable/ic_phone"
                        android:drawablePadding="12dp"/>

                    <TextView
                        android:id="@+id/tvPhone2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 9448234176"
                        android:textColor="@color/primary_premium"
                        android:textSize="18sp"
                        android:layout_marginTop="16dp"
                        app:drawableStartCompat="@drawable/ic_phone"
                        android:drawablePadding="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WhatsApp Support"
                        android:textColor="@color/gold_premium"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textAllCaps="true"/>

                    <Button
                        android:id="@+id/btnWhatsApp1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="12dp"
                        android:text="Chat on WhatsApp: +91 8792207943"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/whatsapp_green"
                        app:icon="@drawable/ic_whatsapp"
                        app:iconTint="@color/white"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btnWhatsApp2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="12dp"
                        android:text="Chat on WhatsApp: +91 9448234176"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/whatsapp_green"
                        app:icon="@drawable/ic_whatsapp"
                        app:iconTint="@color/white"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>